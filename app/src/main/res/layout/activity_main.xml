<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="?attr/actionBarSize">

    <!-- ======== CONTENIDO ORIGINAL ======== -->
    <View
        android:id="@+id/bottom_nav_divider"
        android:layout_width="0dp"
        android:layout_height="3dp"
        android:background="@color/divider_color"
        app:layout_constraintBottom_toTopOf="@id/nav_view"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/nav_view"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="0dp"
        android:layout_marginEnd="0dp"
        android:background="?android:attr/windowBackground"
        style="@style/Widget.HuilaTravel.BottomNavigationView"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:menu="@menu/bottom_nav_menu" />

    <fragment
        android:id="@+id/nav_host_fragment_activity_main"
        android:name="androidx.navigation.fragment.NavHostFragment"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:defaultNavHost="true"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/bottom_nav_divider"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:navGraph="@navigation/mobile_navigation" />

    <!-- ======== NUEVA SECCIÓN DE LUGARES POPULARES ======== -->
    <LinearLayout
        android:id="@+id/seccion_lugares"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:background="@android:color/white"
        app:layout_constraintTop_toBottomOf="@id/nav_host_fragment_activity_main"
        app:layout_constraintBottom_toTopOf="@id/nav_view">

        <TextView
            android:id="@+id/tituloLugares"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lugares Populares del Huila"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_marginBottom="8dp" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerLugares"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:orientation="horizontal" />
    </LinearLayout>

    <!-- ======== BOTÓN FLOTANTE ======== -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabExplorar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:contentDescription="Explorar lugares cercanos"
        android:src="@android:drawable/ic_menu_mylocation"
        app:layout_constraintBottom_toTopOf="@id/nav_view"
        app:layout_constraintRight_toRightOf="parent"
        app:tint="@android:color/white"
        app:backgroundTint="@color/purple_500" />

</androidx.constraintlayout.widget.ConstraintLayout>
