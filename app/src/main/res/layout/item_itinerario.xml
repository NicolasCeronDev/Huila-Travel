<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    card_view:cardCornerRadius="12dp"
    card_view:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="12dp">

        <TextView
            android:id="@+id/tvStepNumber"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:gravity="center"
            android:text="1"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:backgroundTint="#7C4A2F"
            android:background="@drawable/circle_bg"
            android:textSize="16sp"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="12dp"
            android:layout_weight="1">

            <TextView
                android:id="@+id/tvStepTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="MaÃ±ana: Visita..."
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#10331B"/>

            <TextView
                android:id="@+id/tvStepSubtitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="14sp"
                android:textColor="#555555"
                android:layout_marginTop="4dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/tvStepTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="9:00 AM - 12:00 PM"
                    android:textSize="12sp"
                    android:textColor="#777777"/>

                <Space
                    android:layout_width="8dp"
                    android:layout_height="wrap_content" />

                <Button
                    android:id="@+id/btnVerLugar"
                    android:layout_width="wrap_content"
                    android:layout_height="48dp"
                    android:text="Ver Lugar"
                    android:textAllCaps="false"
                    android:backgroundTint="#154F33"
                    android:textColor="@android:color/white"
                    android:layout_gravity="end"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>
